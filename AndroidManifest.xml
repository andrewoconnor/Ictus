<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andrewoconnor.Ictus"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-sdk android:minSdkVersion="16"/>
    <application android:name="Loop"
            android:label="@string/appName" android:icon="@drawable/ic_launcher">
        <activity android:name=".MainMenuActivity"
                  android:label="@string/appName"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PatternActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SubdivisionActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".LoopActivity"
                  android:screenOrientation="portrait"/>
    </application>
</manifest>
